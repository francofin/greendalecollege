    {{#if images.length}}
    <section id="schedule" class="section-with-bg">
      <div class="container" data-aos="fade-up">
        <div class="section-header">
          <h2>Your Posts</h2>
        </div>

        <div class="tab-content row justify-content-center" data-aos="fade-up" data-aos-delay="200">

          <!-- Schdule Day 1 -->
          <div role="tabpanel" class="col-lg-9 tab-pane fade show active" id="day-1">
              {{#each images}}
                {{#if data}}
                <div class="mb-30 p-30 ptb-sm-25 plr-sm-15 card-view">
						<h4 class="p-title"><b>TODAY FEATURED</b></h4>
						<img src="{{data}}" alt="">
						<h3 class="mt-30"><a href="#">{{title}}</a></h3>
						<ul class="mtb-10 list-li-mr-20 color-lite-black">
							<li><i class="mr-5 font-12 ion-clock"></i>{{format_date created_at}}</li>
							<li><i class="mr-5 font-12 ion-android-person"></i>{{user.username}}</li>
							<li><i class="mr-5 font-12 ion-ios-chatbubble-outline"></i>15</li>
							<li><i class="mr-5 font-12 ion-eye"></i>105</li>
						</ul>
						<p>{{body}}</p>
					</div><!-- bg-white -->
          {{else}}
              <div class="mb-30 p-30 ptb-sm-25 plr-sm-15 card-view">
						<h3 class="mt-30"><a href="#">{{body}}</a></h3>
						<ul class="mtb-10 list-li-mr-20 color-lite-black">
							<li><i class="mr-5 font-12 ion-clock"></i>{{format_date created_at}}</li>
							<li><i class="mr-5 font-12 ion-android-person"></i>{{user.username}}</li>
							<li><i class="mr-5 font-12 ion-ios-chatbubble-outline"></i>15</li>
							<li><i class="mr-5 font-12 ion-eye"></i>105</li>
						</ul>
					</div><!-- bg-white -->
              {{/if}}
            {{/each}}

          </div>
          </section>
          {{/if}}

