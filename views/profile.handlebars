    <section id="speakers-details">
      <div class="container">
        <div class="section-header">
      
          <h2>Your Dashboard</h2>
    
          <p>Praesentium ut qui possimus sapiente nulla.</p>
        </div>

        <div class="row">
          <div class="col-md-6">
            <img src="images/sidebar-review-400x300.jpg" alt="Speaker 1" class="img-fluid">
